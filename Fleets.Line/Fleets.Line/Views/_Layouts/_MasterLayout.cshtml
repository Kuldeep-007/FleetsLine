
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FleetsLine | Welcome</title> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.2.0/knockout-min.js" type="text/javascript"></script>

    <style type="text/css">
        body{
            background-color:#fafafa;
        }
        #fl-banner{
            background-color:#fff;
            height:100%;
            padding: 0px !important;
        }
        .fl-banner-head{
            font-size:24px;
            color:#1d3b7a;
            font-weight:bold;
            height:60px;
            background-color:#fff;
            padding-left:15px;
            padding-top:10px;
            /*border-bottom:2px solid #1d3b7a;*/
        }
        .fl-banner-head img{
            height:45px;
            width:auto;
        }
        .fl-tab-head{
            background-color: #f2f2f2;
            padding: 10px;
            font-size: 18px;
            margin-top:15px;
            border-left:5px solid #1d3b7a;
            color:#1d3b7a;
        }

    </style>

</head>
<body>
    <div class="container"> 
        <div class="row">
            <div id="fl-banner" class="col-lg-12">
                <p class="fl-banner-head">
                    <img src="~/Assets/images/vessel-icon-1.jpg" />FleetsLine
                </p>
                @RenderBody()
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#fl-banner").height(window.innerHeight + "px");
        });
    </script>
</body>
</html>
